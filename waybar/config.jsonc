{
    "height": 30, 
    "spacing": 4, // Gaps between modules (4px)
    "modules-left": [
        "hyprland/workspaces",
        "custom/playerctl"
    ],
    "modules-center": [
        "custom/wayves_left",
        "clock",
        "custom/wayves_right"
    ],
    "modules-right": [
        "hyprland/window",
        "tray", 
        "network",
        "pulseaudio",
        "cpu",
        "memory",
        "custom/power"
    ],

    // Modules configuration
        "hyprland/workspaces": {
        "format": "<span font-weight=\"bold\">{}</span>"
    },
    "tray": {
        "spacing": 10
    },
    "clock": {
        "timezone": "America/Porto_Velho",
        "tooltip": true,
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format": "<span font-weight=\"bold\">{:%H:%M}</span>",
        "format-alt": "<span font-weight=\"bold\">{:%Y-%m-%d}</span>"
    },
    "cpu": {
        "format": "<span font-weight=\"bold\">{usage}% Ôãõ</span>",
        "tooltip": true
    },
    "memory": {
        "format": "<span font-weight=\"bold\">{}% ÔÉâ</span>"
    },
    "network": {
        "format-wifi": "<span font-weight=\"bold\">{essid} ({signalStrength}%) Ôá´</span>",
        "format-ethernet": "<span font-weight=\"bold\">{} Ôûñ</span>",
        "tooltip-format": "<span font-weight=\"bold\">{ifname} via {gwaddr} Ôûñ</span>",
        "format-linked": "<span font-weight=\"bold\">{ifname} (No IP) Ôûñ</span>",
        "format-disconnected": "<span font-weight=\"bold\">Disconnected ‚ö†</span>",
        "format-alt": "<span font-weight=\"bold\">{ifname}: {ipaddr}/{cidr}</span>"
    },
    "pulseaudio": {
        "scroll-step": 1,
        "format": "<span font-weight=\"bold\">{volume}% {icon}</span> ",
        "format-bluetooth": "<span font-weight=\"bold\">{volume}% {icon}Ôäî {format_source}</span>",
        "format-bluetooth-muted": "<span font-weight=\"bold\">Ôö© {icon}Ôäî {format_source}</span>",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "on-click": "pavucontrol"
    },
    "custom/wayves": {
        "format": "<span font-weight=\"bold\">{}</span>",
        "exec": "python /home/fifa/.config/cava/wayves/wayves.py -o cava -i cava -a cava"
    },
    "custom/wayves_left": {
        "format": "<span font-weight=\"bold\">{}</span>",
        "exec": "python /home/fifa/.config/cava/wayves/wayves.py -o cava -i cava -a cava"
    },
    "custom/wayves_right": {
        "format": "<span font-weight=\"bold\">{}</span>",
        "exec": "python /home/fifa/.config/cava/wayves/wayves.py -o cava -i cava -a cava"
    },
    
"custom/playerctl": {
    "format": "<span font-weight=\"bold\">üéµ {}</span>",
    "format-paused": "<span font-weight=\"bold\">‚è∏ {}</span>",
    "format-stopped": "<span font-weight=\"bold\">‚èπ Nada tocando</span>",
    "max-length": 50,
    "interval": 1,
    "exec": "playerctl -p spotify metadata --format '{{artist}} - {{title}}'",
    "on-click": "playerctl -p spotify play-pause",
    "on-click-right": "playerctl -p spotify stop",
    "on-scroll-up": "playerctl -p spotify next",
    "on-scroll-down": "playerctl -p spotify previous"
        },

 "custom/power": {
        "format": "<span font-weight=\"bold\" font='18'> ‚èª </span> ",
        "on-click": "nwg-bar"
    }


}
